<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="com.ankit.balc"
      android:versionCode="1"
      android:versionName="1.0">
    <uses-sdk android:minSdkVersion="8" />

    <application android:icon="@drawable/icon" android:label="@string/app_name" android:debuggable="false">
        <activity android:name=".Home"
                  android:label="@string/app_name">
                 <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
         <activity android:name=".BalcActivity"
                  android:label="@string/app_name"
                 android:windowSoftInputMode="adjustPan">
            <intent-filter>
                <action android:name="android.com.ankit.balc.BALCACTIVITY" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
      <activity android:name=".ViewDat"
                  android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.com.ankit.balc.VIEWDAT" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
          <activity android:name=".AddOrEdit"
                  android:label="@string/app_name"
                 android:windowSoftInputMode="adjustPan">
            <intent-filter>
                <action android:name="android.com.ankit.balc.ADDOREDIT" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
    </application>
</manifest>